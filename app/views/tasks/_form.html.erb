<%= form_for(task) do |t| %>
  <%= t.label :title, { :class => 'form-label'} %>
  <%= t.text_field :title, { :class => 'form-control' } %>
  <%= t.label :details, { :class => 'form-label mt-3'}%>
  <%= t.text_field :details, { :class => 'form-control mb-2' } %>
  <%= t.label :completed, { :class => 'form-label'} %>
  <%= t.check_box :completed, { :class => 'form-check-input mt-1' } %>
  <%= t.submit :Save, { :class => 'my-4 d-block btn btn-outline-info' }%>
<% end %>
<%= link_to tasks_path, class: "btn btn-outline-secondary" do %>
  <%= fa_stacked_icon "rotate-left", base: "solid", class: "mr-3" %>Back to list
<% end %>